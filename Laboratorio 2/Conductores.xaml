<Window x:Class="Laboratorio_2.Conductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Conductores" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Nombre del Conductor:" />
            <TextBox x:Name="txtNombreConductor" />

            <Label Content="Licencia:" />
            <TextBox x:Name="txtLicencia" />

            <Label Content="Transporte:" />
            <TextBox x:Name="txtTransporte" />

            <Button Content="Registrar Conductor" Click="RegistrarConductor_Click" />
        </StackPanel>
    </Grid>
</Window>
