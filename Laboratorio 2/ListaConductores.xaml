<Window x:Class="Laboratorio_2.ListaConductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Conductores" Height="400" Width="600">
    <Grid>
        <DataGrid x:Name="dgConductores" AutoGenerateColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre del Conductor" Binding="{Binding Nombre}" />
                <DataGridTextColumn Header="Licencia" Binding="{Binding Licencia}" />
                <DataGridTextColumn Header="Transporte" Binding="{Binding Transporte}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
